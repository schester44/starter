{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "generate": {
      "outputs": ["src/generated/**"],
      "passThroughEnv": ["DATABASE_URL"]
    },
    "reset": {
      "cache": false
    },
    "seed": {
      "cache": false
    },
    "migrate": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": ["DATABASE_URL"]
    }
  }
}
